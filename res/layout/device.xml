<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dip">
    
    <!-- Alias -->
    <TextView
        android:id="@android:id/empty"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="@string/tf_device_admin_alias_label" />
    
    <EditText
        android:id="@+id/alias"
        android:inputType="textCapWords"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@android:id/empty"
        android:inputType="textMultiLine"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"                    
        android:text="@string/tf_device_admin_alias_hint" />
    
    <!-- Email -->
    <TextView
        android:id="@android:id/empty"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:paddingTop="10dp"
        android:text="@string/tf_device_admin_email_label" />
 
    <EditText
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@android:id/empty"
        android:inputType="textMultiLine"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"                    
        android:text="@string/tf_device_admin_email_hint" />
        
    <!-- PIN (read-only) -->
    <TextView
        android:id="@android:id/empty"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:paddingTop="10dp"
        android:text="@string/tf_device_admin_pin_label" />
 
    <TextView
        android:id="@+id/pin"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@android:id/empty"
        android:inputType="textMultiLine"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"                    
        android:text="@string/tf_device_admin_pin_hint" />
        
    <!-- Last checkin time (read-only) -->
    <TextView
        android:id="@android:id/empty"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:paddingTop="10dp"
        android:text="@string/tf_device_admin_checkin_label" />
 
    <TextView
        android:id="@+id/checkin"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@android:id/empty"
        android:inputType="textMultiLine"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"                    
        android:text="@string/tf_device_admin_checkin_hint" />                
    
    <!-- Transfer status option -->
    <RelativeLayout 
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">
        
        <CheckBox             
            android:id="@+id/transferStatus"
            android:gravity="top"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" 
            android:layout_width="wrap_content" 
            android:layout_height="fill_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/transferStatusTitle"
            android:textSize="20sp"            
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@id/transferStatus"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent" />
                
        <TextView
            android:id="@android:id/empty"
            android:inputType="textMultiLine"            
            android:layout_toRightOf="@id/transferStatus"
            android:layout_below="@id/transferStatusTitle"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"                    
            android:text="@string/tf_device_admin_transfer_status_hint" />
    </RelativeLayout>
    
</LinearLayout>    
</ScrollView>