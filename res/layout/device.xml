<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="10dip">
    
    <!-- Alias -->
    <TextView
        android:id="@android:id/empty"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:text="@string/tf_device_admin_alias_label" />
    
    <EditText
        android:id="@+id/alias"
        android:inputType="textCapWords"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@android:id/empty"
        android:inputType="textMultiLine"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"                    
        android:text="@string/tf_device_admin_alias_hint" />
    
    <!-- Email -->
    <TextView
        android:id="@android:id/empty"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:paddingTop="10dp"
        android:text="@string/tf_device_admin_email_label" />
 
    <EditText
        android:id="@+id/email"
        android:inputType="textEmailAddress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@android:id/empty"
        android:inputType="textMultiLine"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"                    
        android:text="@string/tf_device_admin_email_hint" />    
    
    <!-- Device role -->
    <TextView
        android:id="@android:id/empty"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:paddingTop="10dp"
        android:text="@string/tf_device_admin_role_label" />

    <Spinner
        android:id="@+id/role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@android:id/empty"
        android:inputType="textMultiLine"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"                    
        android:text="@string/tf_device_admin_role_hint" />      
    
    <!-- Transfer status option -->
    <TextView
        android:id="@android:id/empty"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:paddingTop="10dp"
        android:text="@string/tf_device_admin_status_label" />    
    
    <TextView
        android:id="@+id/status"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:text="@string/tf_unavailable" />           
                
    <TextView
        android:id="@android:id/empty"
        android:inputType="textMultiLine"            
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"                    
        android:text="@string/tf_device_admin_status_hint" /> 
        
    <!-- PIN (read-only) -->
    <TextView
        android:id="@android:id/empty"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:paddingTop="10dp"
        android:text="@string/tf_device_admin_pin_label" />
 
    <TextView
        android:id="@+id/pin"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@android:id/empty"
        android:inputType="textMultiLine"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"                    
        android:text="@string/tf_device_admin_pin_hint" />        
        
    <!-- Last checkin time (read-only) -->
    <TextView
        android:id="@android:id/empty"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:paddingTop="10dp"
        android:text="@string/tf_device_admin_checkin_label" />
 
    <TextView
        android:id="@+id/checkin"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    
    <TextView
        android:id="@android:id/empty"
        android:inputType="textMultiLine"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"                    
        android:text="@string/tf_device_admin_checkin_hint" />        
</LinearLayout>    
</ScrollView>