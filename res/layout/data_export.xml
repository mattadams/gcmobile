<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dip">

    <TextView 
        android:id="@android:id/empty"
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:layout_marginBottom="3dp"
        android:text="Select Records To Export"
        android:textAppearance="?android:attr/textAppearanceLarge" />        
       
    <CheckBox             
        android:id="@+id/exportDraft"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:text="Draft forms" />
        
    <CheckBox             
        android:id="@+id/exportCompleted"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:text="Completed forms" />        
        
    <TextView 
        android:id="@android:id/empty"
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:layout_marginBottom="3dp"
        android:paddingTop="10dp"
        android:text="Export Destinations"
        android:textAppearance="?android:attr/textAppearanceLarge" />    
            
    <CheckBox
        android:id="@+id/outputSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send data (email, Bluetooth &amp; more)" />
        
    <CheckBox             
        android:id="@+id/outputExternal"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:text="Save data to mobile device" />
    
    <TextView 
        android:id="@android:id/empty"
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:layout_marginBottom="3dp"
        android:text="Export Formats"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <CheckBox
        android:id="@+id/formatCsv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Export data as CSV" />
    
    <CheckBox
        android:id="@+id/formatXml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Export data as XML" />    
        
    <TextView 
        android:id="@android:id/empty"
        android:layout_height="wrap_content" 
        android:layout_width="fill_parent"
        android:layout_marginBottom="3dp"
        android:paddingTop="10dp"
        android:text="Export Options"
        android:textAppearance="?android:attr/textAppearanceLarge" />        
        
    <CheckBox             
        android:id="@+id/outputZip"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:text="ZIP exported data" />
        
    <CheckBox             
        android:id="@+id/outputMediaFiles"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:text="Include media files" />
        
    <CheckBox
        android:id="@+id/outputRecordMetadata"
        android:enabled="false"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:text="Include metadata (CSV only)" />
        
    <Button
        android:id="@+id/beginExport"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_marginTop="10dp"
        android:text="Begin export" />
</LinearLayout>
</ScrollView>